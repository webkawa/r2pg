<?xml version="1.0"?>
<!-- JS Framework : Data sources -->
<xs:schema version="1.0" 
           xmlns:xs="http://www.w3.org/2001/XMLSchema" 
           elementFormDefault="qualified">

    <!-- General tools -->
    <!-- ************* -->
    
    <xs:simpleType name="string">
        <xs:restriction base="xs:string">
            <xs:minLength value="1"/>
        </xs:restriction>
    </xs:simpleType>
    <xs:simpleType name="upperfstring">
        <xs:restriction base="string">
            <xs:pattern value="[A-Z]{1}[a-z0-9]*" />
        </xs:restriction>
    </xs:simpleType>
    <xs:simpleType name="type">
        <xs:restriction base="string">
            <xs:enumeration value="key" />
            <xs:enumeration value="value" />
        </xs:restriction>
    </xs:simpleType>
    
    <!-- Complex components -->
    <!-- ****************** -->
    
    <xs:complexType name="parameter">
        <xs:simpleContent>
            <xs:extension base="string">
                <xs:attribute name="name"
                              type="string"
                              use="required" />
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    <xs:complexType name="error">
        <xs:sequence>
            <xs:element name="parameter"
                        type="parameter"
                        maxOccurs="unbounded" />
        </xs:sequence>
        <xs:attribute name="id"
                      type="xs:decimal"
                      use="required" />
    </xs:complexType>
    
    <xs:complexType name="column">
        <xs:simpleContent>
            <xs:extension base="type">
                <xs:attribute name="alias"
                              type="string"
                              use="required" />
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    <xs:complexType name="descriptor">
        <xs:sequence>
            <xs:element name="column"
                        type="column"
                        minOccurs="1"
                        maxOccurs="unbounded" />
        </xs:sequence>
        <xs:attribute name="alias"
                      type="string"
                      use="required" />
    </xs:complexType>
    
    <xs:complexType name="set">
        <xs:sequence>
            <xs:element name="item"
                        type="xs:string"
                        minOccurs="1"
                        maxOccurs="unbounded" />
            <xs:element name="set"
                        type="set"
                        minOccurs="0"
                        maxOccurs="unbounded" />
        </xs:sequence>
    </xs:complexType>
    
    
    <!-- Main component -->
    <!-- ************** -->
    <xs:element name="data">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="error"
                            type="error"
                            minOccurs="0"
                            maxOccurs="1" />
                <xs:element name="model"
                            type="descriptor"
                            minOccurs="0"
                            maxOccurs="unbounded" />
                <xs:element name="set"
                            type="set"
                            minOccurs="0"
                            maxOccurs="unbounded" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>
