<?xml version="1.0" encoding="UTF-8"?>
<!-- Framework native errors -->
<component xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="../../../data/models/components.xsd"
         type="classic" 
         name="alert" >
    
    <selectors>
        <selector id="window">div.window</selector>
        <selector id="message">div.window > div.message</selector>
        <selector id="button">div.window > div.button</selector>
    </selectors>
    <loader>
        <dom>
            <![CDATA[
                <div class="window">
                    <div class="message">Message</div>
                    <div class="button">Button</div>
                </div>
            ]]>
        </dom>
        <to>Open</to>
    </loader>
    <state id="Open">
        <trigger bind="click">
            <target>button</target>
            <call>
                <name>go</name>
            </call>
        </trigger>
        <trigger bind="mouseover">
            <target>message</target>
            <call>
                <name>append</name>
            </call>
        </trigger>
        <in>
            <target>window</target>
            <animation>
                <speed>2000</speed>
                <easing>swing</easing>
                <move>
                    <property>opacity</property>
                    <from>0</from>
                    <to>1</to>
                </move>
            </animation>
        </in>
        <out>
            <target>window</target>
            <animation>
                <speed>1000</speed>
                <easing>swing</easing>
                <move>
                    <property>opacity</property>
                    <from>1</from> 
                    <to>0</to>
                </move>
            </animation>
            <postcall>
                <name>clean</name>
            </postcall>
        </out>
    </state>
</component>
